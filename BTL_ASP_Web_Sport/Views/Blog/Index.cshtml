@{
}
@model BTL_ASP_Web_Sport.Data.Blog

<style>
    .blog-post {
        margin-bottom: 20px;
        border: 1px solid #ccc;
        padding: 15px;
        border-radius: 5px;
    }

        .blog-post img {
            width: 330px;
            border-radius: 5px;
        }
</style>

<section class="breadcrumb-blog set-bg container">
    <img src="/user/img/breadcrumb-bg.jpg" width="1200px" />
</section>
<!-- Breadcrumb Section End -->
<!-- Blog Section Begin -->
<section class="blog spad">
    <div class="container">
        <div class="row">
            @foreach (var b in ViewBag.Blogs)
            {
                <div class="col-lg-4 col-md-6 col-sm-6">
                    <article class="blog-post">
                        <img src="@(Url.Content("~/Uploads/blogs/" + b.BlogImage))" height="180px" alt="Hình ảnh bài viết 1">
                        <h5 class="my-3">@b.BlogName</h5>
                        <a asp-controller="Blog" asp-action="DetailBlog" asp-route-id="@b.BlogId" class="btn btn-primary">Đọc thêm</a>
                    </article>
                </div>
            }
        </div>
    </div>
</section>